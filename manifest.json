{
    "name": "NCTU 新e3救星",
    "short_name": "NCTU Newe3 Savior",
    "version": "1.3.0",
    "description": "Make New e3 great again",
    "manifest_version": 2,
    "web_accessible_resources": [
        "dist/loading.svg"
    ],
    "permissions": [
        "webRequest",
        "webRequestBlocking",
        "https://e3new.nctu.edu.tw/*"
    ],
    "background": {
        "scripts": [
            "dist/background.js"
        ]
    },
    "content_scripts": [
        {
            "matches": [
                "https://e3new.nctu.edu.tw/*"
            ],
            "js": [
                "dist/hide_loading.js"
            ],
            "run_at": "document_start"
        },
        {
            "matches": [
                "https://e3new.nctu.edu.tw/my/*"
            ],
            "js": [
                "dist/index.js"
            ],
            "css": [
                "dist/index.css"
            ]
        },
        {
            "matches": [
                "https://e3new.nctu.edu.tw/login/*"
            ],
            "css": [
                "dist/login.css"
            ]
        }
    ]
}
